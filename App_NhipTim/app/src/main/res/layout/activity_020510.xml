<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40px"
    tools:context=".Activity_020510">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Thiết bị 020510"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/vien"
            android:textSize="25dp"
            android:layout_marginLeft="90dp"
            />
        <ImageView
            android:id="@+id/imgStatus_020510"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/point_disconnect"/>

        <ImageView
            android:id="@+id/imgAppStatus"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/disconnect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtManguoibenh"
            android:background="@drawable/vien"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mã bệnh nhân"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtTennguoibenh"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:hint="Tên bệnh nhân"
            android:textColor="@color/black"
            android:background="@drawable/vien"
            android:inputType="text"
            />
    </LinearLayout>

    <ScrollView
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/vien">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_BPM"
                android:layout_width="match_parent"
                android:layout_height="280dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bpm"/>
                <TextView
                    android:id="@+id/txtBPM_020510_ct"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="NaN"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/vien"
                    android:textSize="25dp"
                    />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_SPO2"
                android:layout_width="match_parent"
                android:layout_height="280dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/spo2"/>
                <TextView
                    android:id="@+id/txtSPO2_020510_ct"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="NaN"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/vien"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/vien"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lstLichSu"
        android:layout_marginTop="5dp"
        android:layout_width="349dp"
        android:layout_height="220dp"
        android:background="@drawable/vien"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtLuu"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/vien"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="#1B8EE9"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/txtReset"
            android:layout_marginLeft="85dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/vien"
            android:gravity="center"
            android:text="Reset"
            android:textColor="#1B8EE9"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/back"
        />



</LinearLayout>